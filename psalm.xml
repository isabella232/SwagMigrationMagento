<?xml version="1.0"?>
<psalm
    autoloader="bin/static-analyze-autoloader.php"
    findUnusedVariablesAndParams="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    errorBaseline="psalm-baseline.xml"
>
    <projectFiles>
        <directory name="src"/>
        <directory name="tests"/>
        <ignoreFiles>
            <directory name="../../../platform"/> <!-- prevents to check shopware -->
            <directory name="../../../vendor"/> <!-- prevents to check vendor -->
            <directory name="tests/"/> <!-- excluded for now, should be reintegrated in the future -->
            <directory name="vendor/"/>
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <!-- level 3 issues - slightly lazy code writing, but provably low false-negatives -->

        <InternalMethod errorLevel="info"/>
        <PropertyNotSetInConstructor errorLevel="info"/>
        <MissingConstructor errorLevel="info"/>
        <UnresolvableInclude errorLevel="info"/>

        <UndefinedClass>
            <errorLevel type="suppress">
                <directory name="src/Profile"/>
            </errorLevel>
        </UndefinedClass>

        <DeprecatedFunction>
            <errorLevel type="info">
                <referencedFunction name="guzzlehttp\promise\settle"/>
            </errorLevel>
        </DeprecatedFunction>

        <DeprecatedMethod>
            <errorLevel type="info">
                <referencedMethod name="Doctrine\DBAL\Driver\ResultStatement::fetchAll"/>
                <referencedMethod name="Doctrine\DBAL\Driver\ResultStatement::fetchColumn"/>
                <referencedMethod name="Shopware\Core\Framework\Struct\Collection::getIterator"/>
            </errorLevel>
        </DeprecatedMethod>

        <DeprecatedConstant>
            <errorLevel type="info">
                <file name="src/Profile/Magento/Converter/CustomerConverter.php"/>
                <file name="src/Profile/Magento/Converter/NewsletterRecipientConverter.php"/>
                <file name="src/Profile/Magento/Converter/OrderConverter.php"/>
                <file name="src/Profile/Magento/Converter/SalesChannelConverter.php"/>
                <file name="src/Profile/Magento2/Converter/Magento2SalesChannelConverter.php"/>
            </errorLevel>
        </DeprecatedConstant>

        <RedundantCast>
            <errorLevel type="info">
                <!-- Shopware\Core\System\Salutation\SalutationEntity::getSalutationKey() returns null|string in newer Shopware versions -->
                <file name="src/Profile/Magento/Premapping/SalutationReader.php"/>
            </errorLevel>
        </RedundantCast>
    </issueHandlers>

    <forbiddenFunctions>
        <function name="dd"/>
        <function name="dump"/>
        <function name="var_dump"/>
        <function name="error_log"/>
    </forbiddenFunctions>
</psalm>
